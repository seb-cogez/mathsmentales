    "question": "\\begin{cases}${:points[:pt[0]]}(${:x[0]+';\\color{blue}{'+:x[1]}}) \\\\ ${:points[:pt[1]]}(${:x[2]+';\\color{blue}{'+:x[3]}})\\end{cases} \\quad \\overrightarrow{${:points[:pt[0]]+:points[:pt[1]]}}(? ; ?)",
