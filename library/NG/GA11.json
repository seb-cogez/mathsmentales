        "value":"${math.calc('d(('+:a+')*'+:x+'^'+:p+')')}"
    },{
        "name":"Polynomes de degré 2",
        "vars":{"a":"-9_9_3","cx":"0_3","x":"${:lettres[:cx]}"},
        "question":"\\left(${math.calc(:a[0]+'*'+:x+'^2+('+:a[1]+')*'+:x+'+('+:a[2]+')')}\\right)'",
        "answer":":question=\\color{red}{${math.calc('d('+:a[0]+'*'+:x+'^2+('+:a[1]+')*'+:x+'+('+:a[2]+'))')}}",
